generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PG_DATABASE_URL")
}

model Contact {
  id String @id @default(uuid())
  name String
  phone String @unique
  messages Message[]
}

model Message {
  id String @id @default(uuid())
  content String
  contactId String
  author Author @default(BOT)
  read Boolean @default(false)
  createdAt DateTime @default(now())
  contact Contact @relation(fields: [contactId], references: [id])
}

enum Author {
  USER
  BOT
}
